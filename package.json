{
  "name": "Rootandflow.com",
  "version": "1.1.0",
  "description": "Marketing web site for Root and flow, a Marketing Services company.",
  "dependencies": {
    "webfontloader": "^1.6.6"
  },
  "devDependencies": {
    "autoprefixer": "^5.2.0",
    "browser-sync": "^2.8.2",
    "browserify": "^11.0.1",
    "cpy": "^3.4.0",
    "cssmin": "^0.4.3",
    "deamdify": "^0.1.1",
    "debowerify": "^1.3.1",
    "envify": "^3.4.0",
    "favicons": "^3.1.3",
    "graceful-fs": "^4.1.2",
    "hashmark": "^3.0.0",
    "holderjs": "^2.8.2",
    "jshint": "^2.8.0",
    "karma": "^0.13.9",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.2.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.0.0",
    "rimraf": "^2.4.3",
    "uglify-js": "^2.4.24",
    "uglifyify": "^3.0.1",
    "underscore": "^1.8.3",
    "watch": "^0.16.0"
  },
  "config": {
    "sass_includes": "--include-path _sass/ --include-path bower_components/foundation/scss/"
  },
  "scripts": {
    "start": "npm run watch",
    "test": "karma start --singleRun",
    "build:html": "jekyll build",
    "build:html:local": "npm run build:html -- --config _config.yml,_config_dev.yml",
    "build:css": "node-sass --source-map _wrk/ $npm_package_config_sass_includes --output-style expanded _dev/styles.scss -o _wrk/",
    "postbuild:css": "npm run min:css",
    "prebuild:js": "npm run lint:js && npm run clean:js",
    "build:js": "npm run build:js:dev && npm run build:js:vendor && npm run build:js:site",
    "build:js:dev": "browserify -d -t debowerify -t deamdify _dev/scripts/dev.js | uglifyjs -c > dst/scripts/dev.js",
    "build:js:site": "browserify -d -t debowerify -t deamdify _dev/scripts/site.js | uglifyjs -c > dst/scripts/site.js",
    "build:js:vendor": "browserify -t debowerify -t deamdify _dev/scripts/vendor.js | uglifyjs -c > dst/scripts/vendor.js",
    "clean:js": "rimraf dst/scripts",
    "postclean:js": "mkdirp dst/scripts",
    "fetch": "npm install && bower install && npm run vendor:safe",
    "lint:js": "jshint _dev/scripts; exit 0",
    "min:css": "postcss -u autoprefixer -c _bld/postcss.json < _wrk/styles.css | cssmin > dst/styles.css",
    "sync": "browser-sync start --files \"_site/**/*\" --server _site --index index.html",
    "update": "npm update && bower update && npm run vendor:update",
    "vendor:safe": "npm run vendor:css:normalize:safe && npm run vendor:css:foundation:safe && npm run vendor:css:devices:safe",
    "vendor:update": "npm run vendor:css:normalize && npm run vendor:css:foundation && npm run vendor:css:devices",
    "vendor:css:foundation": "node _bld/tasks/foundation.js",
    "vendor:css:foundation:safe": "node _bld/tasks/foundation.safe.js",
    "vendor:css:normalize": "cpy 'bower_components/normalize-scss/_normalize.scss' _sass",
    "vendor:css:normalize:safe": "npm run vendor:css:normalize -- --no-overwrite",
    "vendor:css:devices": "node _bld/tasks/devices.js",
    "vendor:css:devices:safe": "node _bld/tasks/devices.safe.js",
    "watch": "parallelshell 'npm run watch:js' 'npm run watch:css' 'npm run watch:html:local' 'npm run sync'",
    "watch:css": "watch 'npm run build:css' _sass -du",
    "watch:html": "jekyll serve",
    "watch:html:local": "npm run watch:html -- --config _config.yml,_config_dev.yml",
    "watch:js": "watch 'npm run build:js' _dev/scripts -du"
  },
  "license": "CC-BY-NC-ND-4.0",
  "private": true
}
